<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B152E"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/basicbutton"
        android:layout_width="160dp"
        android:layout_height="114dp"
        android:backgroundTint="#258ED6"
        android:hapticFeedbackEnabled="false"
        android:text="@string/basic_configuration"
        app:layout_constraintBottom_toTopOf="@+id/aboutusbutton"
        app:layout_constraintEnd_toStartOf="@+id/networkbutton"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />

    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="362dp"
        android:layout_height="290dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/todo"
        android:src="@mipmap/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/networkbutton"
        android:layout_width="160dp"
        android:layout_height="114dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#258ED6"
        android:text="@string/network_command"
        app:layout_constraintBottom_toTopOf="@+id/forumbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.896" />

    <Button
        android:id="@+id/aboutusbutton"
        android:layout_width="160dp"
        android:layout_height="114dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="#258ED6"
        android:text="@string/about_us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/forumbutton"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/forumbutton"
        android:layout_width="160dp"
        android:layout_height="114dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="132dp"
        android:backgroundTint="#258ED6"
        android:text="@string/forum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>